{
    "compilerOptions": {
        "rootDir": "src",
        // "outDir": "dist",
        "target": "es2020",
        "lib": ["es2020", "DOM"],
        "module": "ES2020", // (A)
        "moduleResolution": "Node", // (B)
        "strict": true,
        "sourceMap": false,
        // Needed for CommonJS modules
        "allowSyntheticDefaultImports": true, // (C)
        //
        "declaration": false
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "bin/*.ts"]
}
